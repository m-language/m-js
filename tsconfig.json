{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "build",
    "declaration": true,
    "lib": ["es2018", "esnext"]
  },
  "exclude": ["node_modules", "runtime", "build", "bootstrap"],
  "include": ["src/**/*"]
}
